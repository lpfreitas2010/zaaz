<!-- ========================================================================================================================================== -->

  <!-- ÁREA FORMULÁRIO -->
  <div id="area_formulario" class="margin-area-formulario {if $area_formulario == false}hidden_area{/if}">

    <!-- TITULO -->
    {if $form_campo_id == ""}
        <section id="area-adicionar" class="m-t-10 content-header {if $param_modal_add != ""}{$param_modal_add}{/if}">
          <ol class="breadcrumb">
            <li><a  href="{$path_raiz}" title="Voltar para página inicial"><i class=""></i> Inicio</a></li>
            {if $area_listagem_geral == true}
                <li><a href="javascript:void(0);" title="Voltar para a listagem de {$titulo_pagina_plural}" class="mostra_area limpo_form_add_edd" hide_area="#area_formulario" hide_area2="#area_btns_status_acoes_forms" show_area="#area_listagem" show_area2="#area_btns_acoes"><i class="{$class_icone_listagem}"></i> {$titulo_pagina_listagem}</a></li>
            {/if}
            <li class="active active_breadcrumb"><i class="{$class_icone_novo}"></i>{$titulo_pagina_novo}</li>
          </ol>
        </section>
    {else}
        <section id="area-editar1" class="m-t-10 content-header">
          <ol class="breadcrumb">
            <li><a  href="{$path_raiz}" title="Voltar para página inicial"><i class=""></i> Inicio</a></li>
            {if $area_listagem_geral == true}
                <li><a href="javascript:void(0);" title="Voltar para a listagem de {$titulo_pagina_plural}" class="mostra_area limpo_form_add_edd" hide_area="#area_formulario" hide_area2="#area_btns_status_acoes_forms" show_area="#area_listagem" show_area2="#area_btns_acoes"><i class="{$class_icone_listagem}"></i> {$titulo_pagina_listagem}</a></li>
            {/if}
            <li class="active active_breadcrumb"><i class="{$class_icone_editar}"></i>{$titulo_pagina_editar}</li>
          </ol>
        </section>
    {/if}
    <section id="area-editar" class="m-t-10 content-header hidden_area">
      <ol class="breadcrumb">
        <li><a href="{$path_raiz}" title="Voltar para página inicial"><i class=""></i> Inicio</a></li>
        {if $area_listagem_geral == true}
            <li><a href="javascript:void(0);" title="Voltar para a listagem de {$titulo_pagina_plural}" class="mostra_area limpo_form_add_edd" hide_area="#area_formulario" hide_area2="#area_btns_status_acoes_forms" show_area="#area_listagem" show_area2="#area_btns_acoes"><i class="{$class_icone_listagem}"></i> {$titulo_pagina_listagem}</a></li>
        {/if}
        <li class="active active_breadcrumb"><i class="{$class_icone_editar}"></i>{$titulo_pagina_editar}</li>
      </ol>
    </section>

    <!-- INCLUDE DO FORM -->
    <form id="form_add_edd" name="form_add_edd" class="" url="{$action_controller}" action="javascript:void(0);" method="post">
      <section class="content ">

          <input type="submit" class="hidden_area">

          <!-- HIDDEN COM O ID -->
          {if $form_campo_id != ""}
              <input type="hidden" name="id" id="id" value="{$form_campo_id}">
          {else}
              <input type="hidden" name="id" id="id" value="">
          {/if}

          <!-- CMD CONTROLLER -->
          <input type="hidden" name="cmd" id="cmd" value="{$cmd_add_edd}">

          <!-- OPÇÃO DE SALVAR -->
          <input type="hidden" name="op_salvar" id="op_salvar" value="">

          <!-- MOSTRO MENSAGENS DE ERRO INLINE -->
          <div id="erros_inline_n"></div>

          <!-- OUTRAS INFORMAÇÕES -->
          <div id="info_form_editar"></div>

          <!-- INCLUDE DO FORM -->
          {include file="modulos/geral/includes/forms/form_$pagina_ativa.phtml"}


      </section>
    </form>


  </div>
</div>
